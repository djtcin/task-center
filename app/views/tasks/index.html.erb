<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>Status</th>
    <th>Public</th>
    <th>Autolock</th>
    <th>Hascomment</th>
    <th>Hasarchives</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.date %></td>
    <td><%= task.status %></td>
    <td><%= task.public %></td>
    <td><%= task.autolock %></td>
    <td><%= task.hasComment %></td>
    <td><%= task.hasArchives %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

