<span class="debug-span">tasks/_form.html.erb</span>
<%= form_for (@task) do |f| %>


  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="line-bar">
    T&iacute;tulo<br />
    <%= f.text_field :title %>
  </div>
  
  <div class="line-bar">
    Descrição:<br />
    <%= f.text_field :description %>
  </div>
  
  <div class="line-bar campos-data">
    Data de entrega:<br />
    <%= f.datetime_select :date %>
  </div>

 <div class="line-bar">
    <%= f.check_box :status %> Ativo
  </div>
  
  <div class="line-bar">
    <%= f.check_box :public %> Público (submissões abertas para os alunos)
  </div>
  
  <div class="line-bar">
    <%= f.check_box :autolock %> Bloquear automaticamente após a data limite de entrega
  </div>
  
  <div class="line-bar">
    <%= f.check_box :hasComment %> Comentário obrigatório
  </div>
  
  <div class="line-bar">
    <%= f.check_box :hasArchives %> Anexar arquivo obrigatório
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div> 
  
<% end %>
