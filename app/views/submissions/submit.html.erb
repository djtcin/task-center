<span class="debug-span">submissions/submit.html.erb</span>
<% content_for :head do %>
 	<div class="gradient-bar line-bar center-text relative">
	
		<span class="title"><%= @task.title %></span>
		<div class="absolute second-title right">
			
			<% if (!@submission[0].submitted) %>
				Pendente
			<% else %>
				Entregue
			<% end %>
		</div>
	</div>
	
	<div class="line-bar">
		<img src="../../images/calendar.png" width="17" height="17"/>
		Até <% @task.date %>
		
		<span class="second-title right-align">
			<% if (@task.public == false)%>
				Não Público
			<% else %>
				<a><img src="alunos.png" width="17" height="17"/> Ver entregas dos alunos ></a>
			<% end %>
		</span>
	</div>
	<div class="clear"></div>

<% end %>

<%= form_for (@submission) do |f| %>

		<div class="line-bar title">
		Especificac&atilde;o:
		</div>
		<div class="line-bar">
		<% @task.description %>
		</div>
		
		<div class="line-bar title">
		Coment&aacute;rio:
		</div>
		<div class="line-bar">
		<%= f.text_field :comment %>
		</div>
		
		<div class="line-bar title">
		Arquivos:
		</div>
		<div class="line-bar">
		
			<ul class="files-list">
				<li><a>exercicio1.doc</a><a class="right-float"><img src="trash.png" width="17" height="17"/></a><span class="right-float">10 KB </span></li>
				<li><a>exercicio1.doc</a><a class="right-float"><img src="trash.png" width="17" height="17"/></a><span class="right-float">10 KB </span></li>
			</ul>
			
			<div class="line-bar">
			<a><img src="upload.png" width="17" height="17"/> Upload</a>
			</div>
		</div>
		
		<br />

		<%= link_to_function "Cancelar", "history.back()", :class => 'cssgradients button-default' %>
		<%= f.submit 'Entregar', :class => 'cssgradients button-default' %>
	
<% end %>

